<body style = "background-color: #686868;">      	
{{#if hasErrors}}
<div class="alert alert-danger">
    {{#each messages}}
        <p>{{this}}</p>
    {{/each}}
</div>
{{/if}}
<div class="login-reg-panel">
<div class="register-info-box" action="/user/signup" method="post">
<h2 class="text1">Already have an account?</h2>
	<a href="/user/signin"><label id="label-login" for="log-reg-show">Sign In</label></a>
<input type="radio" name="active-log-panel" id="log-login-show">
</div>
                
<div class="white-panel">
<div class="row">
<div class="col">

<form action="/user/signin" method="post" style="padding-top: 50px;">
<div class="form-group">
<label for="email"><h3 style="color: black;"><strong>E-Mail</strong></h3></label>
<input type="text" id="email" name="email" class="form-control">
</div>
<div class="form-group">
<label for="password"><h3 style="color: black;"><strong>Password<strong></h3></label>
<input type="password" id="password" name="password" class="form-control">
</div>
<input type="hidden" name="_csrf" value="{{ csrfToken }}"> <!-- so token is submitted when form is submitted and package checks if it is submitted right -->
<button type="submit" class="btn btn-secondary">Sign Up</button></form></div>
</div>
</div>
</div>
</body>
