<div style="padding: 10px;" class="cart-container">
{{# if products}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
            <ul class="list-group" style="color:#000;">
                {{# each products }}
                    <li class="list-group-item" style="color:#000;">
                        <strong>{{ this.item.title }}</strong>
                        <span class="badge badge-success">${{ this.price }}</span>
                        <div class="dropdown d-inline">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action</button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/reduce/{{ this.item._id }}">Reduce by 1</a>
                                <a class="dropdown-item" href="/remove/{{ this.item._id }}">Remove All</a>
                            </div>
                        </div>
                        <span class="badge badge-pill badge-secondary">{{ this.qty }}</span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
<strong style="padding-left: 10px;">Total: {{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
            <a href="/checkout" role="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
{{else}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-md-offset-3">
            <h2>No Items in Cart</h2>
        </div>
    </div>
{{/if}}
</div>
